<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="using:wenku8.CompositeElement"
    xmlns:local="using:App1">

    <Style TargetType="c:FloatyButton">
        <Setter Property="Width" Value="250" />
        <Setter Property="Height" Value="250" />
        <Setter Property="TextBrush" Value="White" />
        <Setter Property="OuterRingBrush" Value="Black" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="c:FloatyButton">
                    <Canvas x:Name="Stage"
                            Width="{TemplateBinding Width}" Height="{TemplateBinding Height}"
                            Background="{TemplateBinding Background}">
                        <Canvas x:Name="Rings" />
                        <Canvas x:Name="RingText" />
                    </Canvas>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
