    xmlns:c="using:GR.CompositeElement">

    <Style TargetType="c:SplashRipple">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="c:SplashRipple">
                    <cv:CanvasAnimatedControl x:Name="AnimaControl" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>